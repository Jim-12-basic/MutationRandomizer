-- Mutations (with rarity and effects)
local mutations = {
	{"shiny", 10}, {"windy", 10}, {"frozen", 10}, {"shocked", 10}, {"golden", 10},
	{"mega", 4}, {"tiny", 3}, {"inverted", 7}, {"Ironskin", 3},
	{"Ascended", 1, true}, {"Radiant", 1, true}, {"Rainbow", 1, true}
}

-- Sound
local rareSound = Instance.new("Sound", f)
rareSound.SoundId = "rbxassetid://9118823104" -- sparkly ding
rareSound.Volume = 1

-- Particles
local particle = Instance.new("ParticleEmitter", f)
particle.Enabled = false
particle.LightEmission = 1
particle.Size = NumberSequence.new(1)
particle.Color = ColorSequence.new(Color3.new(1,1,0), Color3.new(1,0,0))
particle.Speed = NumberRange.new(5)
particle.Texture = "rbxassetid://243660364"
particle.Lifetime = NumberRange.new(1)
particle.Rate = 100
particle.ZOffset = 1

-- Weighted roll
local function getRandomMutation()
	local pool = {}
	for _, m in ipairs(mutations) do
		for _ = 1, m[2] do table.insert(pool, m) end
	end
	return pool[math.random(1, #pool)]
end

-- Rolling animation
local function roll(duration)
	for i = duration, 1, -1 do
		label.Text = "Rolling... " .. i .. "s"
		wait(0.5)
		local picked = getRandomMutation()
		local name = picked[1]:upper()
		label.Text = "Mutation: " .. name

		if picked[3] then
			rareSound:Play()
			particle:Emit(50)
		end
		wait(0.5)
	end
end

-- Reroll button
btn.MouseButto
