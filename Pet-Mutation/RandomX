-- FALCONX Pet Mutation Randomizer (Grow a Garden)

local mutations = {
    {name = "Shiny", chance = 10},
    {name = "Windy", chance = 10},
    {name = "Frozen", chance = 10},
    {name = "Shocked", chance = 10},
    {name = "Golden", chance = 10},
    {name = "Mega", chance = 3},
    {name = "Inverted", chance = 3},
    {name = "Tiny", chance = 3},
    {name = "Ironskin", chance = 2},
    {name = "Ascended", chance = 1},
    {name = "Radiant", chance = 1},
    {name = "Rainbow", chance = 1}
}

-- Function to roll mutation based on chance
local function getMutation()
    local total = 0
    for _, m in pairs(mutations) do total += m.chance end
    local rand = math.random() * total
    local accum = 0
    for _, m in pairs(mutations) do
        accum += m.chance
        if rand <= accum then return m.name end
    end
end

